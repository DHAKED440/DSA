#include<iostream>
#include<vector>
#include<limits.h>
#include<math.h>
using namespace std;

int main () {
   int n=5;
   int arr[]={2,1,2,1,1};
    for(int i=0;i<n;i++){
      int count=0;
      for(int j=0; j<n; j++){
         if(arr[i]==arr[j]){
            count++;
         }
         }
         if(count > (n/2)){
            cout<< "majority element = " << arr[i] << endl;
            cout<< count << " times" << endl;
            break;
      }
    }
    return 0;
}
 

