#include<iostream>
#include<limits.h>
using namespace std;

int main (){
   int n=7;
   int maxsum=INT_MIN;
   int arr[]={3, -4, 5, 4, -1, 7, -8};
   int cs=0;
   for(int i=0; i<n; i++){
       cs+=arr[i];
       maxsum=max(cs,maxsum);
       if(cs<0){
         cs=0;
       }

      }
   
   cout<< "maxsubarray = " << maxsum << endl;
   return 0;
}
 

